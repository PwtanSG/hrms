@model List<HRMS.Models.Domain.Employee>
@{
}
<div class="container p-1">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Employees List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary text-white" asp-area="" asp-controller="Employees" asp-action="Add"><i class="bi bi-file-earmark-plus"></i> Add Employee</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Employee No.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact no.</th>
            <th>Date of Birth</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeNo</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.ContactNo</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Salary</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id" class="btn btn-success"><i class="bi bi-eye"></i> View</a></td>
            </tr>
        }
    </tbody>
</table>