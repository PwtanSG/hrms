@model HRMS.Models.AddEmployeeViewModel
@{
}

<h2>Add Employee</h2>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="inputName" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputName" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputEmpNo" class="form-label">Employee No.</label>
        <input type="text" class="form-control" id="inputEmpNo" asp-for="EmployeeNo">
        <span asp-validation-for="EmployeeNo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputContactNo" class="form-label">Contact No.</label>
        <input type="text" class="form-control" id="inputContactNo" asp-for="ContactNo">
        <span asp-validation-for="ContactNo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputSalary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="inputSalary" asp-for="Salary">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputDob" class="form-label">Email</label>
        <input type="date" class="form-control" id="inputDob" asp-for="DateOfBirth">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="inputDept" class="form-label">Department</label>
        <input type="text" class="form-control" id="inputDept" asp-for="Department">
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary text-white">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
            <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
        </svg>
        Submit
    </button>
</form>